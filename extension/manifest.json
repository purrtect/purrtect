{
    "manifest_version": 2,
  
    "name": "Purrtector",
    "description": "stalks your amazon purrchases and judges you",
    "version": "1.0",
  
    "browser_action": {
     "default_title": "purrtector",
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
      "notifications",
      "storage",
      "activeTab",
      "tabs",
      "<all_urls>"
     ],
     "background": {
        "persistent": false,
        "scripts": ["background.js"]
    }
  }
  